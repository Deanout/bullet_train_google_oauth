<% if can? :read, Oauth::GoogleAccount.new(user: current_user) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_user, :oauth_google_accounts]),
    label: t('oauth/google_accounts.navigation.label'),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('oauth/google_accounts.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
